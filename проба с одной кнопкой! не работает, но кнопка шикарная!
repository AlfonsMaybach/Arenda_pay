<body>
    <button class="pay-button" id="payButton">Оплатить</button>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const payButton = document.getElementById('payButton');
            
            payButton.addEventListener('click', function() {
                // Платежная форма в песочнице
                const baseUrl = 'https://oplata-sandbox.tochka.com/pay/sandbox_form';
                const params = new URLSearchParams();
                
                // Параметры платежа
                params.append('amount', 1000); // Сумма в копейках (1000 копеек = 10 рублей)
                params.append('payment_purpose', 'Оплата аренды');
                
                window.location.href = `${baseUrl}?${params.toString()}`;
            });
        });
    </script>
</body>
